{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist/",
    "removeComments": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["src/**/*", "src/**/*.d.ts"]
}
